{
  "name": "typescript-nodejs-app",
  "version": "1.0.0",
  "description": "typescript nodejs app",
  "main": "dist/index.js",
  "repository": "https://github.com/shotor/typescript-nodejs-app.git",
  "homepage": "https://github.com/shotor/typescript-nodejs-app/",
  "author": "shotor",
  "license": "MIT",
  "private": false,
  "bin": {
    "app": "./dist/index.js"
  },
  "scripts": {
    "start": "yarn build && yarn dist",
    "start:prod": "yarn build:prod && yarn dist",
    "start:dist": "node dist/index.js",
    "build": "rm -rf dist && mkdir dist && ./node_modules/.bin/tsc",
    "build:prod": "./node_modules/.bin/cross-env NODE_ENV=production ./node_modules/.bin/tsc",
    "build:watch": "./node_modules/.bin/tsc --watch",
    "test": "jest --env=node --colors --coverage",
    "test:watch": "jest --env=node --colors --coverage --watch",
    "lint": "yarn eslint --ext .ts,.tsx ./src",
    "lint:fix": "yarn eslint --ext --fix .ts,.tsx ./src",
    "prettier:fix": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "prettier:staged": "pretty-quick --staged",
    "pre-commit": "yarn build && yarn test && git add .",
    "commit": "git-cz"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn pre-commit"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "pretty-quick --staged --write",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.2"
  }
}
